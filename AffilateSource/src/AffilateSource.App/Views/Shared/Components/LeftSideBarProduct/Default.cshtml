        <div class="widget">
            <h4 class="widget-title">Tìm kiếm</h4>
            <div class="search-bx">
                <form role="search" method="post">
                    <div class="input-group">
                        <input name="text" type="text" class="form-control" placeholder="Nhập từ khóa...">
                        <span class="input-group-btn">
                            <button type="submit" class="site-button"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
        <div class="widget widget_categories">
            <h4 class="widget-title">Danh mục khuyến mãi</h4>
            <ul>
                @foreach (var item in Model.ListcategoryProductSidebar)
                {
                    <li><a href="/@item.SeoAlias-@item.Id">@item.CategoryName </a>(10)</li>
                }
                
            </ul>
