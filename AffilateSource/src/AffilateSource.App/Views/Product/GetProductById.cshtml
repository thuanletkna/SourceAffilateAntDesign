                        <div class="col-lg-8 col-md-8">
                            <div class="dez-post-title ">
                                <h3 class="post-title m-b10"><a href="@Model.GetProductById.LinkAffilateOther">@Model.GetProductById.Title</a></h3>
                            </div>
                            <div class="dez-post-text">
                                <p class="m-b10">@Model.GetProductById.Description</p>
