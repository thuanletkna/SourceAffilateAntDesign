@using AffilateSource.Shared.ViewModel.Product
@using Microsoft.Extensions.Configuration
@model ProductViewModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "GetProductById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content bg-white">
        <!-- inner page banner -->
        <div class="dez-bnr-inr overlay-black-middle" style="background-image:url(/portalstyle/images/banner/banner.png);">
            <div class="container">
                <div class="dez-bnr-inr-entry">
                    <h1 class="text-white">Thông tin sản phẩm</h1>
                </div>
            </div>
        </div>
